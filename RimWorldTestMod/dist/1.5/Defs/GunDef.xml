<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <ThingDef ParentName="BaseHumanMakeableGun">
        <defName>Gun_TestGun</defName>
        <label>rocket launcher</label>
        <description>这把枪大概能打出爆炸子弹</description>
        <tickerType>Normal</tickerType>
        <graphicData>
            <texPath>AutoCannon</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <drawSize>2.0</drawSize>
        </graphicData>
        <equippedDistanceOffset>0.24</equippedDistanceOffset>
        <soundInteract>Interact_Rifle</soundInteract>
        <recipeMaker>
            <researchPrerequisite>PrecisionRifling</researchPrerequisite>
            <skillRequirements>
                <Crafting>6</Crafting>
            </skillRequirements>
            <displayPriority>420</displayPriority>
        </recipeMaker>
        <thingSetMakerTags><li>RewardStandardQualitySuper</li></thingSetMakerTags>
        <statBases>
            <WorkToMake>40000</WorkToMake>
            <Mass>3.5</Mass>
            <AccuracyTouch>0.30</AccuracyTouch>
            <AccuracyShort>0.70</AccuracyShort>
            <AccuracyMedium>0.90</AccuracyMedium>
            <AccuracyLong>0.80</AccuracyLong>
            <RangedWeapon_Cooldown>0.1</RangedWeapon_Cooldown>
        </statBases>
        <costList>
            <Steel>60</Steel>
            <ComponentIndustrial>7</ComponentIndustrial>
        </costList>
        <verbs>
            <li>
                <verbClass>Verb_Shoot</verbClass>
                <hasStandardCommand>true</hasStandardCommand>
                <defaultProjectile>Bullet_HDAutoCannon</defaultProjectile>
                <warmupTime>3.0</warmupTime>
                <range>30.9</range>
                <burstShotCount>5</burstShotCount>
                <ticksBetweenBurstShots>23</ticksBetweenBurstShots>
                <soundCast>Shot_HDAutoCannon</soundCast>
                <soundCastTail>GunTail_Medium</soundCastTail>
                <muzzleFlashScale>0</muzzleFlashScale>
            </li>
        </verbs>
        <tools>
            <li>
                <label>stock</label>
                <capacities>
                    <li>Blunt</li>
                </capacities>
                <power>9</power>
                <cooldownTime>2</cooldownTime>
            </li>
            <li>
                <label>barrel</label>
                <capacities>
                    <li>Blunt</li>
                    <li>Poke</li>
                </capacities>
                <power>9</power>
                <cooldownTime>2</cooldownTime>
            </li>
        </tools>
        <comps>
            <li Class="RimWorldTestMod.CompProperties_HDCannonMode">
                <initMode>Common</initMode>
                <muzzleOffset>(0, 0, 2.1)</muzzleOffset>
                <muzzleFleckDef>AutoCannonMuzzleFlash</muzzleFleckDef>
                <muzzleFleckScale>1.3</muzzleFleckScale>
            </li>
        </comps>
    </ThingDef>
    <ThingDef ParentName="BaseBullet">
        <defName>Bullet_HDAutoCannon</defName>
        <label>rocket</label>
        <thingClass>RimWorldTestMod.Projectile_HDCannonBullet</thingClass>
        <graphicData>
            <texPath>Things/Projectile/Bullet_Big</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <projectile>
            <damageDef>Bomb</damageDef>
            <explosionRadius>1</explosionRadius>
            <speed>90</speed>
            <screenShakeFactor>0.2</screenShakeFactor>
        </projectile>
        <modExtensions>
            <li Class="RimWorldTestMod.HDCannonExtension">
                <piercingModeDamageAmount>40</piercingModeDamageAmount>
                <piercingModeArmorPenetration>1.3</piercingModeArmorPenetration>
                <commonModeDamageAmount>20</commonModeDamageAmount>
                <commonModeArmorDirectHitPenetration>0.5</commonModeArmorDirectHitPenetration>
                <commonModeArmorPenetration>0.2</commonModeArmorPenetration>
                <commonModeExplosionRadius>1.1</commonModeExplosionRadius>
                <explosionDamageFallOff>false</explosionDamageFallOff>
            </li>
        </modExtensions>
    </ThingDef>
    
    <FleckDef ParentName="FleckBase">
        <defName>AutoCannonMuzzleFlash</defName>
        <altitudeLayer>MoteOverhead</altitudeLayer>
        <solidTime>0.03</solidTime>
        <fadeOutTime>0.07</fadeOutTime>
        <graphicData>
            <texPath>MuzzleFlash</texPath>
            <shaderType>MoteGlow</shaderType>
        </graphicData>
    </FleckDef>
</Defs>