<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <ThingDef ParentName="BaseHumanMakeableGun">
        <defName>Gun_HDAC_AutoCannon</defName>
        <label>auto cannon</label>
        <description>Powerful precision auto cannon, can use backpack to speed up loading.</description>
        <graphicData>
            <texPath>AutoCannon</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <drawSize>2.0</drawSize>
        </graphicData>
        <equippedDistanceOffset>0.24</equippedDistanceOffset>
        <soundInteract>Interact_Rifle</soundInteract>
        <recipeMaker>
            <researchPrerequisites>
                <li>PrecisionRifling</li>
                <li>GasOperation</li>
            </researchPrerequisites>
            <recipeUsers>
                <li>FabricationBench</li>
            </recipeUsers>
            <skillRequirements>
                <Crafting>5</Crafting>
            </skillRequirements>
            <displayPriority>420</displayPriority>
        </recipeMaker>
        <thingSetMakerTags>
            <li>RewardStandardQualitySuper</li>
        </thingSetMakerTags>
        <statBases>
            <WorkToMake>15000</WorkToMake>
            <Mass>7</Mass>
            <AccuracyTouch>0.30</AccuracyTouch>
            <AccuracyShort>0.70</AccuracyShort>
            <AccuracyMedium>0.90</AccuracyMedium>
            <AccuracyLong>0.80</AccuracyLong>
            <RangedWeapon_Cooldown>3</RangedWeapon_Cooldown>
        </statBases>
        <costList>
            <Plasteel>20</Plasteel>
            <Steel>60</Steel>
            <ComponentIndustrial>10</ComponentIndustrial>
        </costList>
        <verbs>
            <li>
                <verbClass>Verb_Shoot</verbClass>
                <hasStandardCommand>true</hasStandardCommand>
                <defaultProjectile>Bullet_HDAC_AutoCannonBullet</defaultProjectile>
                <warmupTime>3.0</warmupTime>
                <range>40</range>
                <burstShotCount>5</burstShotCount>
                <ticksBetweenBurstShots>23</ticksBetweenBurstShots>
                <soundCast>Shot_HDAutoCannon</soundCast>
                <soundCastTail>GunTail_Medium</soundCastTail>
                <muzzleFlashScale>0</muzzleFlashScale>
            </li>
        </verbs>
        <tools>
            <li>
                <label>stock</label>
                <capacities>
                    <li>Blunt</li>
                </capacities>
                <power>12</power>
                <cooldownTime>2</cooldownTime>
            </li>
            <li>
                <label>barrel</label>
                <capacities>
                    <li>Blunt</li>
                    <li>Poke</li>
                </capacities>
                <power>12</power>
                <cooldownTime>2</cooldownTime>
            </li>
        </tools>
        <comps>
            <li Class="HDAC.CompProperties_AutoCannon">
                <initMode>Common</initMode>
                <muzzleOffset>(0, 0, 2.1)</muzzleOffset>
                <muzzleFleckDef>AutoCannonMuzzleFlash</muzzleFleckDef>
                <muzzleFleckScale>1.3</muzzleFleckScale>
            </li>
        </comps>
    </ThingDef>
    <ThingDef ParentName="BaseBullet">
        <defName>Bullet_HDAC_AutoCannonBullet</defName>
        <label>rocket</label>
        <thingClass>HDAC.Projectile_AutoCannonBullet</thingClass>
        <graphicData>
            <texPath>Things/Projectile/Bullet_Big</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <projectile>
            <damageDef>Bomb</damageDef>
            <explosionRadius>1</explosionRadius>
            <speed>90</speed>
            <screenShakeFactor>0.2</screenShakeFactor>
        </projectile>
        <modExtensions>
            <li Class="HDAC.ModExtension_AutoCannonBullet">
                <piercingModeDamageAmount>40</piercingModeDamageAmount>
                <piercingModeArmorPenetration>1.3</piercingModeArmorPenetration>
                <commonModeDamageAmount>20</commonModeDamageAmount>
                <commonModeArmorDirectHitPenetration>0.5</commonModeArmorDirectHitPenetration>
                <commonModeArmorPenetration>0.2</commonModeArmorPenetration>
                <commonModeExplosionRadius>1.1</commonModeExplosionRadius>
                <explosionDamageFallOff>false</explosionDamageFallOff>
            </li>
        </modExtensions>
    </ThingDef>
</Defs>